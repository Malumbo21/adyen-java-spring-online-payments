{
  "name": "Adyen Java Spring Online Payments",
  "image": "mcr.microsoft.com/devcontainers/java:1-17-bullseye",

  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installGradle": "true"
    }
  },

  // Environment variable to control which example to run.
  // Change this value and rebuild the container to run a different example.
  "containerEnv": {
    "EXAMPLE_TO_RUN": "checkout-example"
  },

  // Runs once when the Codespace is created.
  // Makes the startup script executable and builds the specified example.
  "postCreateCommand": "chmod +x .devcontainer/run_example.sh && cd ${containerEnv:EXAMPLE_TO_RUN} && ./gradlew build",

  // Runs after the user attaches to the Codespace.
  // This will automatically start the selected example application in the terminal.
  "postAttachCommand": ".devcontainer/run_example.sh ${containerEnv:EXAMPLE_TO_RUN}",
  "forwardPorts": [8080],

  "portsAttributes": {
    "8080": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.java",
        "vscjava.vscode-java-debug",
        "vscjava.vscode-java-test",
        "pivotal.vscode-spring-boot"
      ]
    }
  }
}